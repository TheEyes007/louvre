{% extends 'base.html.twig' %}
{% form_theme form 'forms/forms_errors.html.twig' %}
{% block title %}Musée du Louvre - Vos coordonnées personnelles{% endblock %}

{% block body %}
    <div class="container form-style">
        <div class="row">
            <div class="col s12 m12">
                <div class="card-title"><b>Renseignez vos informations personnelles</b></div><br/>
                {{ form_start(form) }}
                    <div class="card-content">
                        {{ form_row(form.name, {'label' : "Votre nom"}) }}
                        {{ form_row(form.firstname, {'label' : "Votre prénom"}) }}
                        <div>
                            {{ form_errors(form.dateofbirth) }}
                            <label for="accounts_dateofbirth" class="required active">Date de naissance</label>
                        {{ form_widget(form.dateofbirth) }}
                            <span class="btn-floating btn-small waves-effect waves-light white datepicker"><i class="material-icons black">date_range</i></span>
                        </div>
                        {{ form_row(form.email, {'label' : "Email"}) }}
                    </div>
                    <div class="card-action">
                        <a class="waves-effect orange waves-light btn" href="/"><i class="material-icons left">home</i>Retour</a>
                        <button class="waves-effect green waves-light btn right" type="submit"><i class="material-icons right">arrow_forward</i>Suivant</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}