{% extends 'base.html.twig' %}
{#{% form_theme form 'forms/forms_errors.html.twig' %}#}
{% block title %}Musée du Louvre - Réserver vos tickets{% endblock %}

{% block body %}
    <div class="container form-style">
        <div class="row">
            <div class="col s12 m12">
                <div class="card-title"><b>Renseignez vos informations personnelles > Réservez votre ou vos ticket(s)</b></div><br/>
                <div class="col s6 m6"><h6>Informations personnelles</h6>
                        <ul>
                            <li>Nom : {{ userparams.name }}</li>
                            <li>Prénom : {{ userparams.firstname }}</li>
                            <li>Email : {{ userparams.email }}</li>
                            <li>Date de naissance : {{ userparams.dateofbirth.date|date('d/m/Y') }}</li>
                        </ul>
                    </div>
                    <div class="col s6 m6"><h6>Réservation</h6>
                        <ul>
                            <li>Nom : {{ userparams.name }}</li>
                            <li>Prénom : {{ userparams.firstname }}</li>
                            <li>Email : {{ userparams.email }}</li>
                            <li>Date de naissance : {{ userparams.dateofbirth.date|date('d/m/Y') }}</li>
                        </ul>
                    </div>
                    <div class="card-action">
                        <a class="waves-effect orange waves-light btn" href="/reservation"><i class="material-icons left">arrow_back</i>Retour</a>
                        <button class="waves-effect green waves-light btn right" type="submit"><i class="material-icons right">arrow_forward</i>Suivant</button>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}